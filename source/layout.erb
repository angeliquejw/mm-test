<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv='X-UA-Compatible' content='IE=edge;chrome=1' />
    <title><%= current_article.title + ' | ' unless current_article.nil? %> Dev Journal | Angelique Weger</title>
    <%= stylesheet_link_tag "stylesheets/solarizeddark" %>
    <%= stylesheet_link_tag "stylesheets/journal" %>
    <%= feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed" %>
    <!-- TODO: Add favicon and modernizr -->
  </head>
  <body>
    
    <div class="container">
      <%= partial "partials/header" %>
      <%= yield %>
      <%= partial "partials/aside" %>
      <%= partial "partials/footer" %>
    </div>
    
  </body>
</html>
